    @{
    ViewData["Title"] = "Hackathon";
}
<h3>@ViewData["Message"]</h3>

<h3>Join a Competition:</h3>
<form asp-controller="Team" asp-action="MakeTeam" method="POST">
    <div class="row topbuffer">
        <div class="col-md-3">
        <select name="competition" class="form-control">
            @foreach (var c in ViewBag.currentCompetitions) {
                <option value="@c.CompetitionId">@c</option>
            }
        </select>
        </div>
        <div class="col-sm-1">
            <input type="submit" value="Join" class="btn btn-warning">
        </div>
    </div>
</form>

<h3>My Current Competitions:</h3>
@foreach (var c in ViewBag.votingCompetitions) {
    <p><a asp-controller="Team" asp-action="ViewCompetition" asp-route-compId="@c.CompetitionId">@c</a>
    @if (c.StudentTeam != null) {
        <a asp-controller="Team" asp-action="Edit" asp-route-teamId="@c.StudentTeam.TeamId" class="btn btn-default">Edit</a>
    }
    </p>
}