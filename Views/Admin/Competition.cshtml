@{
    ViewData["Title"] = "Hackathon";
}
<h3>@ViewData["Message"]</h3>

<div class="row">
    <div class="col-md-5">
        <h2>Add a New Competition</h2>
        @foreach (var e in ViewBag.errors) {
            <p class="rederror">@e</p>
        }
        
        <form asp-controller="Team" asp-action="AddCompetition" method="POST">
            <div class="form-group">
                <label for="name">Competition Name</label>
                <input type="text" name="name" class="form-control">
            </div>
            <div class="form-group">
                <label for="type">Type</label>
                <select name="type" class="form-control">
                    @foreach (var t in ViewBag.types) {
                        <option value="@t.CompetitionTypeId">@t.Description</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="stacks">Stack(s)</label>
                <select name="stacks" class="form-control" multiple>
                    @foreach (var s in ViewBag.stacks) {
                        <option value="@s.MonthlyLangStackId">@s</option>
                    }
                </select>
            </div>
            <div class="form-group">
                <label for="size">Max Team Size</label>
                <input type="number" name="size" class="form-control">
            </div>
            <div class="form-group">
                <label for="start">Start</label>
                <input type="date" name="startdate" class="form-control">
                <input type="time" name="starttime" class="form-control">
            </div>
            <div class="form-group">
                <label for="end">End</label>
                <input type="date" name="enddate" class="form-control">
                <input type="time" name="endtime" class="form-control">
            </div>
            
            <input type="submit" value="Register" class="btn btn-success">
        </form>
    </div>

    <div class="col-md-5">
        <h2>Leaderboard</h2>
    </div>
</div>