@{
    ViewData["Title"] = "Hackathon";
}

@model Hackathon.Models.Student

<h2>Edit Student</h2>

<form asp-controller="Admin" asp-action="UpdateStudent" method="POST">
    <input type="hidden" value="@Model.UserId" name="UserId">
    <div class="form-group">
        <label asp-for="@Model.FirstName"></label>
        <input asp-for="@Model.FirstName" value="@Model.FirstName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.LastName"></label>
        <input asp-for="@Model.LastName" value="@Model.LastName" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Email"></label>
        <input asp-for="@Model.Email" value="@Model.Email" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.Password"></label>
        <input asp-for="@Model.Password" value="@Model.Password" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.StartDate"></label>
        <input asp-for="@Model.StartDate" value="@Model.StartDate.ToString("yyyy-MM-dd")" class="form-control">
    </div>
    <div class="form-group">
        <label asp-for="@Model.EndDate"></label>
        <input asp-for="@Model.EndDate" value="" class="form-control">
    </div>
    <input type="submit" value="Update" class="btn btn-warning">
</form>
